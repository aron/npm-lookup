<li class="package {{^dependencies}}package--no-children{{/dependencies}}">
  {{#error}}
    <p class="package__name"><strong>{{name}}</strong><span class="package__error"> - ERROR: {{error}}</span></p>
  {{/error}}
  {{^error}}
    <p class="package__name"><strong>{{name}}</strong><span class="package__at">@</span>{{version}}</p>
    <ul class="package__dependencies">
    {{#dependencies}}
      {{> package }}
    {{/dependencies}}
    </ul>
  {{/error}}
</li>
